{% extends 'partials/base.html.twig' %}
{% set blog = page.find(theme_var('blog-page')|default('/blog')) %}
{% set show_breadcrumbs = header_var('show_breadcrumbs', [page, blog]) %}
{% set show_sidebar = header_var('show_sidebar', [page, blog])  %}
{% set show_pagination = header_var('show_pagination', [page, blog]) %}
{% set hero_image_name = page.header.hero_image %}

{% block hero %}
	{% if hero_image_name %}
		{% set hero_image = page.media[hero_image_name] %}
		{% include 'partials/hero.html.twig' with {id: 'blog-hero', class: ' hero parallax'} %}
	{% endif %}
{% endblock %}

{% block body %}
<section id="body-wrapper" class="section blog-listing">
    <section class="container {{ grid_size }}">
        {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
        {% endif %}
        {% embed 'partials/layout.html.twig' %}
        {% block item %}
            <section id="start">
                <section class="section modular-features offset-box">
                    <div class="frame-box">
                        {% if date %}
                            <span class="label label-rounded">
                                <b>{% include 'partials/blog/date.html.twig' %}</b>
                            </span>
                        {% endif %}
                        <h1>{{ page.title }}</h1>
                        <h2>{{ page.header.subtitle }}</h2>
                        {% include 'partials/blog-item.html.twig' %}
                        {% include 'partials/blog/taxonomy.html.twig' %}
                    </div>
                    <button class="btn btn-action s-circle"><a href="#top"><i class="icon icon-arrow-up"></i></a></button>
                </section>
            </section>
        {% endblock %}
        {% block sidebar %}
            {% include 'partials/sidebar.html.twig' %}
        {% endblock %}
    {% endembed %}
</section>
</section>
{% endblock %}
